<!--pages/center/center.wxml-->
<view class="userInfo">
  <image src="{{userInfo.avatarUrl}}" bindtap="handleTap"></image>
  <view>{{userInfo.nickName}}</view>
</view>

<mp-cells class="my-cells">
  <mp-cell value="完善信息">
    <mp-icon slot="icon" type="field" icon="me" color="black" size="{{15}}"></mp-icon>
    <mp-icon slot="footer" type="field" icon="arrow" color="black" size="{{15}}"></mp-icon>
  </mp-cell>
  <mp-cell value="个人设置">
    <mp-icon slot="icon" type="field" icon="add2" color="black" size="{{15}}"></mp-icon>
    <mp-icon slot="footer" type="field" icon="arrow" color="black" size="{{15}}"></mp-icon>
  </mp-cell>
</mp-cells>
